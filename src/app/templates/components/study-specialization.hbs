<li class="specialization list-group-item">
  <button {{action removeSpecialization index}} type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <div class="form-group row">
    <label for="specialization_title" class="col-sm-2">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="specialization_title" name="specialization_title[]">
    </div>
  </div>
  <div class="form-group row">
    <label for="specialization_description" class="col-sm-2">Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="specialization_description" name="specialization_description[]">
    </div>
  </div>
</li>