<li class="li-education list-group-item">
  <img class="li-education-university" src="/assets/images/{{education.university}}.png" />
  {{#if education.name.da}}
    <h3 class="li-education-name">{{education.name.da}}</h3>
  {{else}}
    <h3 class="li-education-name">{{education.name.en}}</h3>
  {{/if}}
  <small class="li-education-title"><i>{{education.title}}</i></small>
  <div class="row li-education-information">
    <div class="col-md-4">
      <strong>Description</strong>
      <p>{{education.description}}</p>
    </div>
    <div class="col-md-6">
      <strong>Skills</strong>
      <ul class="ul-skills">
        {{#each education.skills as |skill|}}
          <li class="skill-tag"><span>{{skill}}</span></li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class='read-more row'>
    {{#link-to 'education' education.id }}<small>See details &raquo;</small>{{/link-to}}
  </div>
</li>